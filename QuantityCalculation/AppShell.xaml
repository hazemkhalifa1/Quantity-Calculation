<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuantityCalculation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuantityCalculation.View"
    Shell.FlyoutBehavior="Flyout" FlyoutVerticalScrollMode="Auto"
    Title="QuantityCalculation">

    <FlyoutItem Title="منتجات" >
        <ShellContent ContentTemplate="{DataTemplate local:ItemTablePage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="خامات" >
        <ShellContent ContentTemplate="{DataTemplate local:MaterialTablePage}" />
    </FlyoutItem>

    <FlyoutItem Title="MB" >
        <ShellContent ContentTemplate="{DataTemplate local:MBTablePage}" />
    </FlyoutItem>

    <FlyoutItem Title="الوان" >
        <ShellContent ContentTemplate="{DataTemplate local:ColorTablePage}" />
    </FlyoutItem>
</Shell>
